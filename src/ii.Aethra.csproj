<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>net8.0</TargetFramework>
    <RootNamespace>ii.Aethra</RootNamespace>
    <AssemblyName>ii.Aethra</AssemblyName>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>
    <Copyright>Copyright ©  2025</Copyright>
    <Title>ii.Aethra</Title>
    <Version>0.8.0.0</Version>
    <Authors>iggti</Authors>
    <PackageLicenseExpression>MIT</PackageLicenseExpression>
    <RepositoryUrl>https://github.com/btigi/iiAethra</RepositoryUrl>
    <Description>C# library to facilitate editing of the 1994 CRPG The Aethra Chronicles.</Description>
    <PackageTags>Aethra Chronicles</PackageTags>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="SixLabors.ImageSharp" Version="3.1.7" />
  </ItemGroup>

</Project>
